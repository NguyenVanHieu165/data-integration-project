{
  "queue_khach_hang_tbl": {
    "entity_type": "khach_hang",
    "required_fields": ["id", "ho_ten", "sdt", "thanh_pho", "email"],
    "custom_rules": [
      {
        "name": "email_has_at_symbol",
        "description": "Email phải chứa ký tự @",
        "field": "email",
        "validation": "contains",
        "value": "@",
        "error_message": "Email phải có ký tự @"
      },
      {
        "name": "phone_starts_with_zero",
        "description": "Số điện thoại phải bắt đầu bằng 0",
        "field": "sdt",
        "validation": "starts_with",
        "value": "0",
        "error_message": "Số điện thoại phải bắt đầu bằng 0"
      },
      {
        "name": "phone_length",
        "description": "Số điện thoại phải có 10-11 chữ số",
        "field": "sdt",
        "validation": "length_range",
        "min": 10,
        "max": 11,
        "error_message": "Số điện thoại phải có 10-11 chữ số"
      }
    ]
  },
  "queue_nguyen_lieu_tbl": {
    "entity_type": "nguyen_lieu",
    "required_fields": ["id", "ten_nguyen_lieu", "so_luong", "don_vi", "nha_cung_cap"],
    "custom_rules": [
      {
        "name": "quantity_positive",
        "description": "Số lượng phải lớn hơn 0",
        "field": "so_luong",
        "validation": "greater_than",
        "value": 0,
        "error_message": "Số lượng nguyên liệu phải lớn hơn 0"
      },
      {
        "name": "valid_unit",
        "description": "Đơn vị phải hợp lệ",
        "field": "don_vi",
        "validation": "in_list",
        "values": ["kg", "g", "lít", "lit", "ml", "l", "chai", "lọ", "bó", "gói", "hộp", "thùng", "cái", "chiếc", "túi"],
        "error_message": "Đơn vị không hợp lệ"
      }
    ]
  },
  "queue_mon_tbl": {
    "entity_type": "mon",
    "required_fields": ["id", "ten_mon", "loai_id", "gia"],
    "custom_rules": [
      {
        "name": "price_positive",
        "description": "Giá phải lớn hơn 0",
        "field": "gia",
        "validation": "greater_than",
        "value": 0,
        "error_message": "Giá món phải lớn hơn 0"
      },
      {
        "name": "price_max_limit",
        "description": "Giá không được vượt quá 1 triệu",
        "field": "gia",
        "validation": "less_than_or_equal",
        "value": 1000000,
        "error_message": "Giá món không được vượt quá 1,000,000 VNĐ"
      },
      {
        "name": "name_min_length",
        "description": "Tên món phải có ít nhất 3 ký tự",
        "field": "ten_mon",
        "validation": "min_length",
        "value": 3,
        "error_message": "Tên món phải có ít nhất 3 ký tự"
      },
      {
        "name": "loai_id_positive",
        "description": "Loại ID phải lớn hơn 0",
        "field": "loai_id",
        "validation": "greater_than",
        "value": 0,
        "error_message": "Loại ID phải lớn hơn 0"
      }
    ]
  },
  "queue_loai_mon_tbl": {
    "entity_type": "loai_mon",
    "required_fields": ["id", "ten_loai"],
    "custom_rules": [
      {
        "name": "name_not_empty",
        "description": "Tên loại không được rỗng",
        "field": "ten_loai",
        "validation": "not_empty",
        "error_message": "Tên loại không được rỗng"
      },
      {
        "name": "name_min_length",
        "description": "Tên loại phải có ít nhất 2 ký tự",
        "field": "ten_loai",
        "validation": "min_length",
        "value": 2,
        "error_message": "Tên loại phải có ít nhất 2 ký tự"
      }
    ]
  },
  "queue_dat_hang_tbl": {
    "entity_type": "dat_hang",
    "required_fields": ["id", "khach_hang_id", "mon_id", "so_luong", "ngay_dat", "trang_thai"],
    "custom_rules": [
      {
        "name": "quantity_positive",
        "description": "Số lượng đặt phải lớn hơn 0",
        "field": "so_luong",
        "validation": "greater_than",
        "value": 0,
        "error_message": "Số lượng đặt hàng phải lớn hơn 0"
      },
      {
        "name": "quantity_reasonable",
        "description": "Số lượng đặt không được quá 1000",
        "field": "so_luong",
        "validation": "less_than_or_equal",
        "value": 1000,
        "error_message": "Số lượng đặt hàng không hợp lý (>1000)"
      },
      {
        "name": "customer_id_positive",
        "description": "Customer ID phải lớn hơn 0",
        "field": "khach_hang_id",
        "validation": "greater_than",
        "value": 0,
        "error_message": "Customer ID phải lớn hơn 0"
      },
      {
        "name": "mon_id_positive",
        "description": "Món ID phải lớn hơn 0",
        "field": "mon_id",
        "validation": "greater_than",
        "value": 0,
        "error_message": "Món ID phải lớn hơn 0"
      },
      {
        "name": "valid_status",
        "description": "Trạng thái phải hợp lệ",
        "field": "trang_thai",
        "validation": "in_list",
        "values": ["Đang xử lý", "Đã giao", "Đã hủy", "Chờ xác nhận"],
        "error_message": "Trạng thái không hợp lệ"
      }
    ]
  }
}
